<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.callerscreendialer.theme.yourthemenamehere.MainActivity">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:textColor="@color/Red"
        android:text="@string/heart_theme"/>

    <Button
        android:id="@+id/GoToCSD"
        android:text="Apply"
        android:layout_weight="0.85"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/Red"/>


    <HorizontalScrollView
        android:id="@+id/horizontal_SV"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/info_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/screenshot1"/>
            <ImageView
                android:id="@+id/screenshot2"
                android:layout_width="200dp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:src="@drawable/screenshot2" />
            <ImageView
                android:id="@+id/screenshot3"
                android:layout_width="200dp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:src="@drawable/screenshot3"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/make_theme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_margin="3dp"
        android:text="@string/make_theme"/>

</LinearLayout>
